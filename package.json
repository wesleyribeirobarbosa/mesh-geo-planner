{
  "name": "mesh-geo-planner",
  "version": "1.0.0",
  "description": "Otimização de Posicionamento de Concentradores para Redes Mesh",
  "main": "main.js",
  "scripts": {
    "postinstall": "cd client && npm install",
    "build:react": "cd client && npm run build",
    "start": "electron .",
    "dev": "concurrently \"npm run electron:dev\" \"npm run client\"",
    "electron:dev": "electron .",
    "dist": "npm run build:react && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesleyribeirobarbosa/mesh-geo-planner.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wesleyribeirobarbosa/mesh-geo-planner/issues"
  },
  "homepage": "https://github.com/wesleyribeirobarbosa/mesh-geo-planner#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "multer": "^2.0.1",
    "rbush": "^4.0.1",
    "socket.io": "^4.7.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.suaempresa.meshgeoplanner",
    "productName": "MeshGeoPlanner",
    "files": [
      "main.js",
      "api.js",
      "gw_position_planner.js",
      "config.json",
      "output/**/*",
      "uploads/**/*",
      "client/build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    }
  }
}
